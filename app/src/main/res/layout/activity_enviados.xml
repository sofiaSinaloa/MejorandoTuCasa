<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Enviados"
    android:background="@color/grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarEnviados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Azul_Pantone_654_C"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Lecturas Enviadas"
            app:titleMarginStart="30dp"
            android:layout_marginBottom="10dp"
            tools:ignore="MissingConstraints"
            android:foregroundTint="@color/white"
            app:titleTextColor="@color/white">
        </androidx.appcompat.widget.Toolbar>

        <ListView
            android:id="@+id/listviewEnviados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            android:dividerHeight="5.0sp"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@+id/toolbarEnviados"
            tools:layout_editor_absoluteX="35dp"
            tools:listitem="@layout/list_item_enviados" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>